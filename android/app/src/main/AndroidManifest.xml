<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfair">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera" />
    <uses-permission android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ferris_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ferris_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.WebViewActivity"></activity>
        <activity android:name=".PacketInfoActivity"></activity>
        <activity android:name=".activities.PacketViewingActivity" />
        <activity android:name=".activities.CardPickerActivity" />
        <activity android:name=".activities.PacketCreationActivity" />
        <activity android:name=".activities.CardInfoActivity" />
        <activity android:name=".activities.CardViewingActivity" />
        <activity android:name=".activities.analytics.UserCardAnalyticsActivity" />
        <activity android:name=".activities.analytics.HistoryAnalytics" />
        <activity android:name=".activities.analytics.UserAnalytics" />
        <activity android:name=".activities.SplashPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ProfileEditingActivity" />
        <activity android:name=".activities.ScannedActivity" />
        <activity android:name=".activities.GenerateActivity" />
        <activity android:name=".activities.ScanActivity" />
        <activity android:name=".activities.CardCreationActivity" />
        <activity android:name=".activities.ProfileCreationActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.LoginActivity" />
    </application>

</manifest>